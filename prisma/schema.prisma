generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Game {
  id         String     @id @default(cuid())
  status     GameStatus
  players    GamePlayer[] @relation("players")
  field      Json?
    winnerId   String?
  winner     GamePlayer?      @relation(fields: [winnerId], references: [id])
  gameOverAt String?
}

model User {
  id           String @id @default(cuid())
  login        String
  rating       Int
  passwordHash String
  salt         String @default("")
  players        GamePlayer[]
}

model GamePlayer {
  id String @id @default(cuid())
  gameId String
  game Game @relation("players", fields: [gameId], references: [id])
  userId String
  user User @relation(fields: [userId], references: [id])
  index Int
  Game Game[]
}

enum GameStatus {
  idle
  inProgress
  gameOver
  gameOverDraw
}
